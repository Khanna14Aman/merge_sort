#include<iostream>
#include<vector>
using namespace std;
int count=0;
void merge(int low , int high , int mid, int a[])
{
	int left =low;
	int right = mid+1;
	vector<int>v;
	while(left<=mid && right<=high)
	{
		if(a[left]<=a[right])
		{
			v.emplace_back(a[left]);
			left++;
		}
		else
		{
			v.emplace_back(a[right]);
			count += (mid-left)+1;
			right++;
		}
	}
	while(left<=mid)
	{
		v.emplace_back(a[left++]);
		
	}
	while(right<=high)
	{
		v.emplace_back(a[right++]);
	}
	for(int i=low ;i<=high;i++)
	{
		a[i]=v[i-low];

	}
}
void mergesort(int low , int high , int a[])
{
	if(low>=high)
		return ;
	else
	{
		int mid = (low+high)>>1;
		mergesort(low,mid,a);
		mergesort(mid+1,high,a);
		merge(low,high,mid,a);
	}
}
int main(){
    
    while(1)
    {
    count=0;
	int n;
	//cout<<"\nenter no of element in array\n";
	cin>>n;
	if(n==0)
	{
	    break;
	}
	int a[n];
	//cout<<"\nenter element of an array\n";
	for(int i=0;i<n;i++)
	{
		cin>>a[i];
	}

	mergesort(0,n-1,a);
	 //cout<<"\nsorted aray is \n";
	 //for(int i=0;i<n;i++)
	 //	cout<<a[i]<<" ";
	 
	 cout<<count<<"\n";
    
    }
	return 0;
}
